<div class="container">
    <div class="row">
        <div class="col s12 m12">
            <div class="card hoverable"> 
                <div class="card-content center-align"> 
                  {{#if checkId}}
                    <h2>Your Profile</h2> 
                  {{else}}
                    <h4>Viewing Other User's Profile</h4>
                  {{/if}}
                    <i class="material-icons large teal-text text-darken-4">account_circle</i> 
                    <span class="card-title">Username: {{profile.name}}</span>
                    <p>Email: {{profile.email}}</p>
                </div>
            </div>
        </div>
    </div>
</div>