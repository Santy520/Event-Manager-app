<div class="container">
  <div class="row">
    <div class="col s12 m6">
      <h2>Login</h2>

      <form class="form login-form">
        <div class="input-field">
          <input id="username-login" type="text" class="validate">
          <label for="username-login">Username</label>
        </div>
        <div class="input-field">
          <input id="password-login" type="password" class="validate">
          <label for="password-login">Password</label>
        </div>
        <div class="form-group">
          <button class="btn waves-effect waves-light" type="submit">Login</button>
        </div>
      </form>
    </div>
    <div class="col s12 m6">
      <h2>Signup</h2>

      <form class="form signup-form">
        <div class="input-field">
          <input id="username-signup" type="text" class="validate">
          <label for="username-signup">Username</label>
        </div>
        <div class="input-field">
          <input id="email-signup" type="email" class="validate">
          <label for="email-signup">Email</label>
        </div>
        <div class="input-field">
          <input id="password-signup" type="password" class="validate">
          <label for="password-signup">Password</label>
        </div>
        <div class="form-group">
          <button class="btn waves-effect waves-light" type="submit">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/userLogin.js"></script>
