<form class="form new-event">

  <div class="form-group">
    <label for="event-title">Title:</label>
    <input class="form-input" type="text" id="event-title" />
  </div>

  <div class="form-group">
    <label for="event-desc">Description:</label>
    <input class="form-input" type="text" id="event-desc" />
  </div>

  <div class="form-group">
    <label for="event-loca">Location:</label>
    <input class="form-input" type="text" id="event-loca" />
  </div>

  <div class="form-group">
    <label for="event-date">Date(YYYY-MM-DD):</label>
    <input class="form-input" type="text" id="event-date" />
  </div>

  <div class="form-group">
    <label for="event-time">Time(FORMAT: hh:mm:ss):</label>
    <input class="form-input" type="text" id="event-time" />
  </div>

  <div class="form-group">
    <button class="btn btn-primary" type="submit">Post</button>
  </div>

</form>

<script src="/js/eventPost.js"></script>